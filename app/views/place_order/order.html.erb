<h3>Place Order</h3>

<body style="margin-left: 30px;">

    <div class="row">
    <div class="col-md-3">
        <label for="formFile" class="form-label">Item Name</label>
        <input type="text" class="form-control" placeholder="Item name" aria-label="Item Name">
    </div>
    </div>
    <div class="row">
    <div class="col-md-3">
        <label for="formFile" class="form-label">Quantity</label>
        <input type="number" id="inputQuantitySelector" class="form-control" aria-live="polite" data-bs-step="counter" name="quantity" title="quantity" value="1" min="1" max="50" step="1" data-bs-round="0" aria-label="Quantity selector">
    </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <label for="formFile" class="form-label">Discount</label>
            <input type="text" class="form-control" placeholder="%" aria-label="Last name">
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <label for="formFile" class="form-label">Total Amount</label>
            <input type="text" class="form-control" placeholder="PKR" aria-label="Total A,ount">
        </div>
    </div>

    <%= link_to 'Check Out', root_path, class: 'btn btn-white shadow-warning text-warning', style: 'margin-top: 20px;' %>

</body>